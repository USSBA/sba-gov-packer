{
  "_comment-ami-id": "The AMI listed below uses a version of the CIS CentOS7 AMI, modified to allow packer to SSH in and run commands.  The final task packer does is close the hole opened for it.",
  "_comment-tmp_vpc_id": "Any VPC where packer should spin up the image",
  "_comment-tmp_subnet_id": "Any subnet where packer should spin up the image",
  "variables": {
    "aws_tag_name1": "ussba-cis-centos7-ecs",
    "aws_tag_name": "{{env `TAG`}}",
    "aws_region": "{{env `REGION`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `aws_region`}}",
      "instance_type": "m4.large",
      "ssh_username": "centos",
      "ssh_interface": "public_ip",
      "ami_name": "{{user `aws_tag_name`}}-{{timestamp}}",
      "iam_instance_profile": "{{user `iam_instance_profile`}}",
      "tags": {
        "Name": "packer-{{user `aws_tag_name`}}-{{timestamp}}"
      },
      "snapshot_tags": {
        "Name": "packer-{{user `aws_tag_name`}}-{{timestamp}}"
      },
      "run_tags": {
        "Name": "packer-{{user `aws_tag_name`}}-{{timestamp}}"
      },
      "run_volume_tags": {
        "Name": "packer-{{user `aws_tag_name`}}-{{timestamp}}"
      },
      "launch_block_device_mappings": [
        {
          "delete_on_termination": "true",
          "device_name": "/dev/sda1",
          "volume_size": 40,
          "volume_type": "gp2"
        }
      ],
      "user_data": "sed -i 's/^Defaults \\+requiretty/#Defaults requiretty/' /etc/sudoers",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "description": "CIS Centos Linux 7 Benchmark*",
          "root-device-type": "ebs",
          "owner-id": "679593333241"
        },
        "most_recent": true
      }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "echo 'validating sudo access...'",
        "sudo echo success",
        "echo 'connected.  sleeping for 30 seconds before starting'",
        "sleep 30",
        "sudo yum update -y",
        "sudo yum install -y yum-utils device-mapper-persistent-data lvm2 nfs-utils",
        "sudo yum-config-manager --add-repo https://download.docker.com/linux/centos/docker-ce.repo",
        "sudo yum install -y docker-ce",
        "sudo /usr/bin/easy_install --script-dir /opt/aws/bin https://s3.amazonaws.com/cloudformation-examples/aws-cfn-bootstrap-latest.tar.gz",
        "sudo rm /var/lib/cloud/instances/*/sem/config_scripts_user",
        "sudo rm -rf /var/lib/cloud/* #remove packer user_data info",
        "sudo sed -i 's/^#Defaults \\+requiretty/Defaults requiretty/' /etc/sudoers"
      ]
    }
  ]
}
